<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.walkity.apps.journalapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/login_title">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.walkity.apps.journalapp.MainActivity" />
        </activity>
        <activity android:name=".DiaryFactoryActivity" android:label="@string/factory_title"/>
        <activity android:name=".SettingsActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/settings_title">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.walkity.apps.journalapp.MainActivity" />
        </activity>
        <activity
            android:name=".DiraryActivity"
            android:label="@string/title_activity_dirary"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.walkity.apps.journalapp.MainActivity" />
        </activity>
    </application>

</manifest>